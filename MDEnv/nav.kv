<BaseMDNavigationItem>

    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text


<BaseScreen>

    FitImage:
        source: f"https://picsum.photos/{root.image_size}/{root.image_size}"
        size_hint: .9, .9
        pos_hint: {"center_x": .5, "center_y": .5}
        radius: dp(24)


MDBoxLayout:
    orientation: "vertical"
    md_bg_color: self.theme_cls.backgroundColor

    MDScreenManager:
        id: screen_manager

        BaseScreen:
			color: 1 , 0 , 0 , 1
            name: "Cerca dispositivi"
            image_size: "1024"

        BaseScreen:
            name: "Home"
            image_size: "800"

        BaseScreen:
            name: "Gestisci"
            image_size: "600"

		BaseScreen:
            name: "Profilo"
            image_size: "600"

		BaseScreen:
            name: "Logout"
            image_size: "600"


    MDNavigationBar:
        on_switch_tabs: app.on_switch_tabs(*args)

        BaseMDNavigationItem
            icon: "wifi-sync"
            text: "Cerca dispositivi"
            active: True

        BaseMDNavigationItem
            icon: "home-assistant"
            text: "Home"

        BaseMDNavigationItem
            icon: "cogs"
            text: "Gestisci"

		BaseMDNavigationItem
            icon: "account-circle"
            text: "Profilo"

		BaseMDNavigationItem
            icon: "logout"
            text: "Logout"